# ==========================================
# LLM CONFIGURATION
# ==========================================
# Options: gemini, claude, openai
LLM_PROVIDER=gemini
# Options: gemini-2.5-pro, claude-sonnet-4-5-20250929
LLM_MODEL=gemini-2.5-pro
LLM_API_KEY=your_api_key_here
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2048

# ==========================================
# SCM CONFIGURATION
# ==========================================
# Options: github, gitlab
SCM_PLATFORM=github
SCM_TOKEN=your_personal_access_token
# These are often provided by Jenkins Multibranch/PR pipelines
SCM_REPO_OWNER=your_org_or_user_name
SCM_REPO_NAME=your_repository_name
# In Jenkins, this usually maps to ${CHANGE_ID}
SCM_PR_ID=1

# ==========================================
# REVIEW SETTINGS
# ==========================================
# This should match a filename in .reviewer/ (e.g., security.md)
REVIEW_PROMPT_TYPE=security
REVIEW_PROMPT_DIR=.reviewer
REVIEW_LANGUAGE=en

# ==========================================
# SYSTEM SETTINGS
# ==========================================
# Options: debug, info, warn, error
SYSTEM_LOG_LEVEL=info
SYSTEM_TIMEOUT=30